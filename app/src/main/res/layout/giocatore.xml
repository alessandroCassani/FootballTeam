<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <ImageView
        android:id="@+id/ivPlayer"
        android:layout_width="150dp"
        android:layout_height="150dp"
        tools:background="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvPlayerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Ciao"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivPlayer"/>
    <TextView
        android:id="@+id/tvBirthDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="dd-mm-yyyy"
        app:layout_constraintTop_toBottomOf="@id/tvPlayerName"
        app:layout_constraintStart_toEndOf="@+id/ivPlayer"/>
    <TextView
        android:id="@+id/tvRole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Striker"
        app:layout_constraintTop_toBottomOf="@id/tvBirthDate"
        app:layout_constraintStart_toEndOf="@+id/ivPlayer"/>
    <TextView
        android:id="@+id/tvPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="123456789"
        app:layout_constraintTop_toBottomOf="@id/tvRole"
        app:layout_constraintStart_toEndOf="@+id/ivPlayer"/>
    <TextView
        android:id="@+id/tvCertification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Gold"
        app:layout_constraintTop_toBottomOf="@id/tvPhone"
        app:layout_constraintStart_toEndOf="@+id/ivPlayer"/>
    <TextView
        android:id="@+id/tvResults"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Good"
        app:layout_constraintTop_toBottomOf="@id/tvCertification"
        app:layout_constraintStart_toEndOf="@+id/ivPlayer"/>
    <TextView
        android:id="@+id/tvIdNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="123"
        app:layout_constraintTop_toBottomOf="@id/tvResults"
        app:layout_constraintStart_toEndOf="@+id/ivPlayer"/>

</androidx.constraintlayout.widget.ConstraintLayout>